<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:id="@+id/datePicker2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button android:id="@+id/setRing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置铃声"
        android:layout_below="@+id/datePicker2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/setTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置时间"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/datePicker2"
        android:layout_toRightOf="@+id/setRing"
        android:layout_toEndOf="@+id/setRing" />

    <Button android:id="@+id/setOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置完成"
        android:layout_below="@+id/datePicker2"
        android:layout_alignRight="@+id/datePicker2"
        android:layout_alignEnd="@+id/datePicker2" />

</RelativeLayout>